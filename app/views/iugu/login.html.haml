- if user_signed_in?

  You are signed in as 
  = current_user.email
  = link_to "Settings", settings_path
  = ' | '
  = link_to "Sign out", logout_path, :method => :delete

- else

  = form_for @user, :url => login_path do |f|
    %div
      = f.label :email
      = f.email_field :email
    %div
      = f.label :password
      = f.password_field :password
    %div
      = f.check_box :remember_me
      = f.label :remember_me
    %div
      = f.submit "Sign in"
