%h2ser
  Sign up

= form_for @user, :url => registration_create_path do |f|

  %div
    = f.label :email
    = f.email_field :email

  %div
    = f.label :password
    = f.password_field :password

  %div
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  %div
    = f.submit "Sign up"
